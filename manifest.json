{
  "manifest_version": 3,
  "name": "Piazza AI Search",
  "version": "0.1.0",
  "description": "Search Piazza posts with AI assistance.",
  "action": {
    "default_title": "Piazza AI"
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "cookies"],
  "host_permissions": ["https://piazza.com/*", "https://api.x.ai/*"],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://piazza.com/class/*"],
      "js": [
        "lib/marked.min.js",
        "lib/katex.min.js",
        "lib/auto-render.min.js",
        "scripts/templates.js",
        "scripts/content.js"
      ],
      "css": ["lib/katex.min.css", "styles/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/fonts/*"],
      "matches": ["https://piazza.com/*"]
    }
  ]
}
