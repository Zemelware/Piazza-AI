{
  "manifest_version": 3,
  "name": "Piazza AI Search",
  "version": "0.1.0",
  "description": "Search Piazza posts with AI assistance.",
  "browser_specific_settings": {
    "gecko": {
      "id": "piazza-ai-search@ethanzemelman.com",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_title": "Piazza AI"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "cookies"],
  "host_permissions": [
    "https://piazza.com/*",
    "https://api.x.ai/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://piazza.com/class/*"],
      "js": [
        "lib/marked.min.js",
        "lib/katex.min.js",
        "lib/auto-render.min.js",
        "scripts/templates.js",
        "scripts/content.js"
      ],
      "css": ["lib/katex.min.css", "styles/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/fonts/*"],
      "matches": ["https://piazza.com/*"]
    }
  ]
}
